<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hae5.sfaas.maintenance.schedule.mapper.ScheduleMapper">
    
    <insert id="save" parameterType="com.hae5.sfaas.maintenance.schedule.model.Schedule" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO maintenance_schedule (line, process, machine, contents, remarks)
    VALUES (#{line}, #{process}, #{machine}, #{contents}, #{remarks})
    </insert>

    <delete id="deleteAll">
        DELETE FROM maintenance_schedule;
    </delete>


    <select id="findById" resultType="com.hae5.sfaas.maintenance.schedule.model.Schedule">
        SELECT m.*
        FROM maintenance_schedule as m
        WHERE m.id = #{id}
        LIMIT 1
    </select>

    <select id="findAll" resultType="com.hae5.sfaas.maintenance.schedule.model.Schedule">
        SELECT m.*
        FROM maintenance_schedule as m;
    </select>

</mapper>